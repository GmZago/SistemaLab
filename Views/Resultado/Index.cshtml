@model IEnumerable<SistemaExame.Models.Resultado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ResultadoExame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRealizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultadoObservacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exame)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profissional)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResultadoExame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRealizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultadoObservacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exame.ExameId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profissional.ProfissionalId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResultadoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResultadoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResultadoId">Delete</a> |
                <a asp-action="Imprimir" asp-route-id="@item.ResultadoId" target="_blank">Imprimir</a>
            </td>
        </tr>
}
    </tbody>
</table>
